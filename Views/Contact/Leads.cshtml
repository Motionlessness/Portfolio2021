@model Email
@{
    ViewData["Title"] = "Website Development";
}
<h1 class="bg-secondary border border-dark text-center">Lead Generation Website Request</h1>
<div>
    <form class="form-floating mb-3" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="RequestType" value="Lead Generation Website Request" />
        <label asp-for="Name" class="text-light">Name:</label>
        <input asp-for="Name" type="text" class="form-control bg-dark text-light" placeholder="Name">
        <label asp-for="PhoneNumber" class="text-light">Phone number:</label>
        <input asp-for="PhoneNumber" type="text" class="form-control bg-dark text-light" placeholder="(1+) 123-456-7890">
        <label asp-for="FromAddress" class="text-light" for="floatingEmail">Email address:</label>
        <input asp-for="FromAddress" type="email" class="form-control bg-dark text-light" id="floatingEmail" placeholder="name@example.com">
        <label asp-for="Description" class="text-light" for="floatingDescription">Service Description:</label>
        <span asp-for="Description" class="textarea bg-dark text-light" id="floatingDescription" role="textbox" contenteditable></span>
        <br /><input type="submit" value="Submit" class="form-control btn-dark" />
    </form>
</div>